<Window x:Class="CommunityPatchLauncher.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunityPatchLauncher"
        xmlns:p = "clr-namespace:CommunityPatchLauncher.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.MainWindow_Title}" Height="450" Width="800">

  <TabControl Margin="5 5 5 0" VerticalAlignment="Top">
    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal">
          <Ellipse Width="10" Height="10" Fill="DarkGray"/>
          <TextBlock>Play</TextBlock>
        </StackPanel>
      </TabItem.Header>
      <StackPanel Orientation="Horizontal">
        <TextBlock>Enter some text:</TextBlock>
        <TextBox Name="textBox1" Width="50"/>
      </StackPanel>
    </TabItem>

    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal">
          <Ellipse Width="10" Height="10" Fill="DarkGray"/>
          <TextBlock>News</TextBlock>
        </StackPanel>
      </TabItem.Header>
      <StackPanel Orientation="Horizontal">
        
      </StackPanel>
    </TabItem>


  </TabControl>
 

</Window>