<Window x:Class="CommunityPatchLauncher.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunityPatchLauncher"
        xmlns:p = "clr-namespace:CommunityPatchLauncher.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.MainWindow_Title}" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal" MaxHeight="30">
            <Label Content="{x:Static p:Resources.Default_LanguageLabel}"></Label>
            <ComboBox Margin="5" Name="CB_LanguageSelector" MinWidth="200">
                <ComboBoxItem Content="{x:Static p:Resources.Default_LanguageDe}" Tag="de-DE"></ComboBoxItem>
                <ComboBoxItem Content="{x:Static p:Resources.Default_LanguageEn}" Tag="en-EN"></ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
